<tr>
  <td>
    <input class="invoices-batch" type="checkbox" value="<%= invoice.id %>">
  </td>
  <td data-load-invoice="<%= invoice.id %>"><%= invoice.seller.company_nickname %></td>
  <td><i class="fa fa-calendar"></i> <%= invoice.average_outstanding_days %></td>
  <td>R$ <%= humanized_money invoice.total_value %></td>
  <td>R$ <%= humanized_money invoice.average_interest %></td>
  <td class="client-status"><span class="label label-primary"><%= @gross_interest %>%</span></td>
</tr>
